@model IEnumerable<PersonSearchHC.Models.Person>

@if (Model == null)
{
    <table class="table">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>

        <tr>
            <td>
                <strong>No names found</strong>
            </td>
        </tr>
    </table>

}
else
{
    <table class="table">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Age
            </th>
            <th>
                Address
            </th>
            <th>
                Interests
            </th>
            <th>
                Profile Picture
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @item.Address1@(item.Address2 != null && item.Address2 != "" ? ", " + item.Address2 + ", " : ", ") @item.City, @item.State @item.Zip
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Interests)
                </td>
                <td>
                    <img src="~/Content/Images/Donald_Trump_official_portrait.jpg" height="50" width="40" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
}
